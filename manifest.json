  "repository": {
    "type": "git",
    "url": "https://github.com/arangodb/foxx-simple-auth.git"
  },

  "contributors": [
    {
      "name": "Alan Plum",
      "email": "me@pluma.io"
    }
  ],

  "exports": {
    "auth": "auth.js"
  },

  "defaultDocument": "",

  "lib": ".",

  "configuration": {
    "hashMethod": {
      "description": "Cryptographic hash function to use for new passwords.",
      "type": "string",
      "default": "sha256"
    },
    "saltLength": {
      "description": "Length of new salts.",
      "type": "integer",
      "default": 16
    }
  }
}
